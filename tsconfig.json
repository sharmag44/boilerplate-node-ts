{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src"
    },
    "include": [
      "src/**/*.ts",
      "index.js",
      "config/*.config.js"
    ],
    "exclude": ["node_modules"]
  }
  